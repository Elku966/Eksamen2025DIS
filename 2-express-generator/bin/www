#!/usr/bin/env node 

var app = require('../app'); //Henter express app fra app.js
var debug = require('debug')('2-express-generator:server'); //Debugværktøj 
var http = require('http'); //HTTP modul der skaber serveren

//Bestemmer hvilken port serveren skal lytte på
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

//Opretter en HTTP server
var server = http.createServer(app);

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

//Funktion der sikre at porten er valid
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    return val;
  }

  if (port >= 0) {
    return port;
  }
  return false;
}

//Funktion der håndterer typiske server fejl
function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

//Logger når serveren er startet korrekt
function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
